<!-- Put this part before </body> tag -->
<input type="checkbox" id="my-modal-4" class="modal-toggle" />
<label
  for="my-modal-4"
  class="modal cursor-pointer left-[78px] w-[calc(100%-78px)]"
>
  <label class="modal-box relative bg-white" for="">
    <!-- Add user form -->
    <section class="w-3/4 mx-auto flex text-black">
      <!-- Intro -->
      <div class="w-full flex flex-col">
        <h2>Edit Client</h2>
        <span>Use the below form to edit a client</span>
        <form
          class="flex flex-col items-start w-full"
          action="/createClient"
          method="POST"
        >
          <div class="mb-3 w-full mt-5">
            <label for="name">Name</label>
            <input
              type="text"
              class="w-full bg-cultured rounded-md border border-lightGray py-1 text-black"
              id="name"
              name="name"
              value="<%= clients[num].name %>"
            />
          </div>
          <div class="mb-3 w-full">
            <label for="phone" class="">Phone</label>
            <input
              type="text"
              class="w-full bg-cultured rounded-md border border-lightGray py-1"
              id="phone"
              name="phone"
              value="<%= clients[num].phone %>"
            />
          </div>
          <div class="mb-3 w-full">
            <label for="email" class="">Email</label>
            <input
              type="text"
              class="w-full bg-cultured rounded-md border border-lightGray py-1"
              id="email"
              name="email"
              value="<%= clients[num].email %>"
            />
          </div>
          <div class="mb-3 w-full">
            <label for="address" class="">Address</label>
            <input
              type="text"
              class="w-full bg-cultured rounded-md border border-lightGray py-1"
              id="address"
              name="address"
              value="<%= clients[num].address %>"
            />
          </div>
          <!-- Radio buttons -->
          <div class="">
            <label for="personOrCompany" class="text-lightGray"
              >Person / Company</label
            >
            <div class="inline">
              <input type="radio" name="personOrCompany" id="radio-2"
              value="Person" <%= clients[num].personOrCompany === 'Person' ?
              'checked' : ''%> />
              <label for="radio-2" class="">Person</label>
            </div>
            <div class="inline">
              <input type="radio" id="radio-3" name="personOrCompany"
              value="Company" <%= clients[num].personOrCompany === 'Company' ?
              'checked' : ''%> />
              <label for="radio-3" class="">Company</label>
            </div>
          </div>
          <div class="mb-3 w-full mt-4">
            <label for="description" class="">Description</label>
            <textarea
              type="text"
              class="w-full h-24 bg-cultured rounded-md border border-lightGray py-1"
              id="description"
              name="description"
            >
<%= clients[num].description %></textarea
            >
          </div>
          <button
            type="submit"
            class="text-base text-white font-medium cursor-pointer h-auto px-8 py-3 bg-blue rounded-3xl m-none"
            value="Save"
          >
            Save
          </button>
        </form>
      </div>
    </section>
  </label>
</label>
