  <body class="bg-cultured">
    <!-- nav bar -->
    <%- include('partials/side-navigation.ejs') -%>

    <!-- Content -->
    <section
      class="dashboardContent relative min-h-screen left-[78px] w-[calc(100%-78px)] transition-all duration-500 ease-linear z-10 break-words mr-0"
    >
      <!-- Header -->
      <header class="flex shadow-md justify-between items-center h-[50px]">
        <h2 class="pl-5 xs:text-lg sm:text-3xl">Dashboard</h2>
        <!-- Search box -->
        <div class="relative text-lg w-52 xs:w-32 xs:mr-7 sm:mr-32 md:mr-40">
          <i
            class="fa-solid fa-magnifying-glass absolute z-10 -translate-y-2 pl-2 border-r-2 pr-2"
          ></i>
          <input
            type="text"
            placeholder="Search..."
            name=""
            class="text-gray absolute pl-[52px] w-full bg-white shadow-sm shadow-lightGray rounded-sm -top-[14px] md:w-60 sm:w-52"
          />
        </div>
      </header>
      <main class="p-5">
        <h1>
          Welcome to Dashboard
          rrrrrrrrrrrrrrrrraaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaacccccccccdddddddddaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaab
        </h1>
        <div class="w-60 h-60 bg-black"></div>
        <div class="w-60 h-60 bg-red-500"></div>
        <div class="w-60 h-60 bg-yellow-300"></div>
        <div class="w-60 h-60 bg-purple-400"></div>
        <div class="w-60 h-60 bg-green-300"></div>
        <div class="w-60 h-60 bg-black"></div>
      </main>
    </section>
    <script src="js/sidenav.js"></script>
